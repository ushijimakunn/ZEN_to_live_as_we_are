<div class='m-3 flex flex-col items-center'>

  <div class='mt-5 text-center'>
    <div class='my-3 text-3xl' >
      <%= MindfulnessType.find(@type_id).name %>  
    </div>
    <div class='mt-5 indent-4 max-w-xl' >
      <%= MindfulnessType.find(@type_id).description %>  
    </div>
  </div>

  <div class="card max-w-4xl bg-base-100 shadow-lg">
    <div class="card-body grid justify-items-center text-center leading-loose">
      <%= simple_format(MindfulnessType.find(@type_id).method) %>
    </div>
  </div>

  <div class='mt-6 mb-3 text-center font-mono'>
    <div class='my-3 text-2xl' >瞑想時間を選択</div>
      <input type="number" class='mx-3 input input-bordered w-28 rounded-full' id='mindful_min' value="10">m
      <input type="number" class='mx-3 input input-bordered w-28 rounded-full' id='mindful_sec' value="0">s
  </div>

  <span class="font-mono text-5xl">
    <span id='min'>00</span>m
    <span id='sec'>00</span>s
  </span>
    <button class="my-3" id='stop_audio' style='display: none;'>
      <i class="fa-solid fa-volume-high fa-xl"></i>
    </button>

    <button class="my-3" id='start_audio' >
      <i class="fa-solid fa-volume-xmark fa-xl"></i>
    </button>

     <%= audio_tag 'tin.mp3', id: 'non_audio' %>

  <div class='my-2 flex flex-row items-center'> 
    <input type="button" class='mx-4 w-20 rounded-full btn btn-secondary' id='start_btn' value="START" >
    <%# <input type="button" class='mx-4 w-20 rounded-full btn btn-accent' id='stop_btn' value="STOP" > %>
    <input type="button" class='mx-4 w-20 rounded-full btn btn-accent' id='end_btn' value="END" >
    <input type="button" class='mx-4 w-20 rounded-full btn btn-secondary' id='reset_btn' value="RESET" >
  </div>

</div>