      <div class="card-body items-center text-center">
        <h2 class="card-title underline underline-offset-4">1. メニューを選択</h2>
        <%= image_tag 'guide_image/menu_image.jpg', class: "rounded-xl mt-10" %>
      </div>
    </div>
    <div class="m-3 card max-w-md bg-base-100 shadow-md">
      <div class="card-body items-center text-center">
        <h2 class="card-title underline underline-offset-4">2. 瞑想を実施</h2>
        <%= image_tag 'guide_image/mindful_new_image.jpg', class: "rounded-xl mt-3" %>
      </div>
    </div>
    <div class="m-3 card max-w-md bg-base-100 shadow-md">
      <div class="card-body items-center text-center">
        <h2 class="card-title underline underline-offset-4">3. 日々の瞑想を記録</h2>
        <%= image_tag 'guide_image/mindfulness_result_image.jpg', class: "rounded-xl mt-10" %>
      </div>
    </div>
  </div>

  <%= link_to '新規登録', signup_path, class: 'btn btn-secondary rounded-full' %>

