<header class="top-0 left-0 right-0 z-20 bg-[#036635] flex items-center px-6 py-4">
  <div>
      <%= image_tag 'meditate_2.png', class: "h-8 invert brightness-0 mr-2"%>
  </div>
  <div class='flex-1'>
      <%= link_to 'pramana', menu_path, class: 'text-white' %>
  </div>
  <div>
      <%= link_to menu_path, class: 'mx-3 text-lg text-white hover:text-gray-300' do %>
        <i class="fa-solid fa-book"></i>
      <% end %>
      <%= link_to mindfuls_path, class: 'mx-3 text-lg text-white hover:text-gray-300' do %>
        <i class="fa-regular fa-calendar-days"></i>
      <% end %>
      <%= link_to profile_path, class: 'mx-3 text-lg text-white hover:text-gray-300' do %>
        <i class="fa-regular fa-user"></i>
      <% end %>
      <%= link_to logout_path, class: 'mx-3 text-lg text-white hover:text-gray-300', method: :delete do %>
        <i class="fa-solid fa-arrow-right-from-bracket"></i>
      <% end %>
  </div>
</header>